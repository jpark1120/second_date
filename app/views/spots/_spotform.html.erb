<!-- first_date -->
<%= form_for @flags, url: "/spots/:spot_id/flags" do |f| %>
  <%= f.hidden_field :first_date, { value: "true" } %>
  <%= f.hidden_field :user_id, { value: current_user.id } %>
  <%= f.hidden_field :spot_id, { value: @spot.id } %>
  <%= f.submit "First Date" %>
<% end %>

