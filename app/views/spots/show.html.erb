<!-- EDIT/DELETE COMMENT -->
<h3>COMMENTS</h3>
<% @spot.comments.each do |chatter| %>
	<p><%= chatter.opinion %> by <%= chatter.user.username %> <%= chatter.user.created_at %></p>
	<% unless chatter.user_id != current_user.id %>
		<%= link_to "Edit", "/spots/#{@spot.id}/comments/#{chatter.id}/edit" %>
		<%#= form_tag edit_comment_path, method: "GET" do %>
			<%#= hidden_field_tag(:comment_id, "#{chatter.id}") %>
			<%#= submit_tag "Edit" %>
		<%# end %>
		<%= link_to "Delete", "/spots/#{@spot.id}/comments/#{chatter.id}" %>
	<% end %>
<% end %>

<ul>
	<% @spot.flags.each do |flag| %>
		<li><%= flag.user.username %></li>
	<% end %>
</ul>			


