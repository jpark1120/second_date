<h1><%= @spot.name %></h1>

<h2>LIKES: <%= @spot.flags.size %></h2>

<%= form_for "/spots/#{@spot.id}/flags", method: "POST" do |f| %>
  <%= f.hidden_field :first_date, { value: "true" } %>
  <%= f.hidden_field :second_date, { value: "false" } %>
  <%= f.hidden_field :third_date, { value: "false" } %>
  <%= f.hidden_field :bad_date, { value: "false" } %>
  <%= f.hidden_field :user_id, { value: current_user.id } %>
  <%= f.hidden_field :spot_id, { value: @spot.id } %>
  <%= f.submit "GOOD FOR FIRST DATE" %>
<% end %>

<%= flash.notice %>
<%= link_to "Back", spots_path %>
<ul>
	<li>Rating: <%= @spot.rating %></li>
	<li>Category: <%= @spot.description %></li>
	<li>Address: <%= @spot.address %></li>
	<li>Price Rank: <%= @spot.price %> (1 = $10, 2 = $20, 3 = $30, 4 = $40 per person)</li>
	<li>Hours: <%= @spot.hours %></li>
</ul>

